<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37474F"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.srv.sumit.abcproperty.Navigation"
    tools:showIn="@layout/app_bar_navigation">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/mylogo"
        android:background="@drawable/e"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <Button
        android:text="View Gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/button3"
        android:textSize="20sp"
        android:typeface="serif"
        android:layout_below="@+id/mylogo"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:onClick="ViewGallery"/>

    <Button
        android:text="Locations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginTop="5dp"
        android:id="@+id/button4"
        android:textSize="20sp"
        android:typeface="serif"
        android:background="#000000"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:onClick="Locations"/>

    <Button
        android:text="Testimonials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:textSize="20sp"
        android:typeface="serif"
        android:layout_alignStart="@+id/button4"
        android:id="@+id/button5"
        android:background="#000000"
        android:layout_marginTop="5dp"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:onClick="Testimonials"/>

    <Button
        android:text="Contact Us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:typeface="serif"
        android:layout_below="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:layout_marginTop="5dp"
        android:id="@+id/button6"
        android:background="#000000"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:onClick="ContactUs"/>

</RelativeLayout>
